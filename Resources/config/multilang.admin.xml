<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="cmf_block.multilang.simple_admin.class">Symfony\Cmf\Bundle\BlockBundle\Admin\MultilangSimpleBlockAdmin</parameter>
        <parameter key="cmf_block.multilang.simple_document.class">Symfony\Cmf\Bundle\BlockBundle\Doctrine\Phpcr\MultilangSimpleBlock</parameter>
    </parameters>

    <services>
        <service id="cmf_block.multilang.simple_admin" class="%cmf_block.multilang.simple_admin.class%">
            <tag name="sonata.admin" manager_type="doctrine_phpcr" group="dashboard.group_content" label_catalogue="CmfBlockBundle" label="dashboard.label_multilang_simple_block" label_translator_strategy="sonata.admin.label.strategy.underscore" />
            <argument/>
            <argument>%cmf_block.multilang.simple_document.class%</argument>
            <argument>SonataAdminBundle:CRUD</argument>
            <argument>%cmf_block.multilang.locales%</argument>

            <call method="setRouteBuilder">
                <argument type="service" id="sonata.admin.route.path_info_slashes" />
            </call>

            <call method="setContentRoot">
                <argument>%cmf_block.persistence.phpcr.content_basepath%</argument>
            </call>
        </service>
    </services>
</container>
